{
  "manifest_version": 3,
  "name": "Tabs Manager",
  "version": "1.0.0",
  "description": "A Chrome extension for managing tabs and bookmarks efficiently",
  "homepage_url": "https://github.com/sarsimour/TabsManager",
  "author": "Sarsimour",
  "support_url": "https://github.com/sarsimour/TabsManager/issues",
  "permissions": [
    "bookmarks",
    "activeTab",
    "commands",
    "storage",
    "windows"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "floating.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+K",
        "mac": "Command+K"
      },
      "description": "Open Tabs Manager"
    }
  }
} 