{
  "manifest_version": 3,
  "name": "Tabs Manager",
  "version": "1.0",
  "description": "A Chrome extension for managing tabs and bookmarks efficiently",
  "permissions": [
    "tabs",
    "bookmarks",
    "activeTab",
    "commands"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "floating.html",
    "default_icon": "icon.png"
  },
  "icons": {
    "48": "icon.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+K",
        "mac": "Command+K"
      },
      "description": "Open Tabs Manager"
    }
  }
} 